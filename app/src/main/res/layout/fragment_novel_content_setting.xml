<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.jarvis.acg.ui.novel.chapter.NovelChapterContentSettingFragment">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="27dp"
            android:orientation="vertical">

            <com.jarvis.acg.ui.customView.CustomTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="@string/dummy_title"
                android:textAlignment="center"
                android:maxLines="1"
                android:ellipsize="marquee"
                app:isChapterContent="true" />

            <com.jarvis.acg.ui.customView.CustomTextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="7dp"
                android:text="@string/dummy_content"
                app:isChapterContent="true"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        </LinearLayout>

        <com.jarvis.acg.ui.customView.ChapterFontStylePanel
            android:id="@+id/fontPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            />

    </FrameLayout>

</layout>